.container-fluid
  .row.ml-3.mt-5.text-right
    .col
      %button.btn.btn-success{type: "button"}
        = link_to "店舗ページへ", "/restaurants/#{current_restaurant.id}", class: "text-white"
    .col-1
.container-fluid
  = form_with model: @sake, class: "sake_form", local: true do |f|
    .form-row.mt-5
      .col-1
      .form-group.col-5
        %h5 日本酒銘柄
        = f.text_field :name, class: 'form-control', placeholder: '例：獺祭'
      .form-group.col-5
        %h5 都道府県
        = f.text_field :prefecture, class: 'form-control', placeholder: '例：山口県'
      .col-1
    .form-row.mt-4
      .col-1
      .form-group.col-3
        %h5 価格
        = f.text_field :price, class: 'form-control', placeholder: '例：〇〇〇円'
      .form-group.col-7
        %h5 コメント
        = f.text_field :comment, class: 'form-control', placeholder: '例：純米吟醸'
      .col-1
    .row.mt-5
      .col.text-center
        = f.submit 'リストを更新する', class: 'btn btn-primary w-25 sake_btn'
.container-fluid.mt-5
.container-fluid
  .row.bg-primary
    .col
    .font-italic.text-light
      %h4 日本酒メニュー
    .col
.container-fluid.sake_box
  .row
    .col-1
    .col
      %table.table.table-striped
        %thead
          %tr
            %th{scope: "col", class: "name_width"} 商品名
            %th{scope: "col", class: "price_width"} 価格
            %th{scope: "col", class: "prefecture_width"} 都道府県
            %th{scope: "col", class: "comment_width"} コメント
        %tbody{class: "sake_list"}
          - @sakes.each do |sake|
            %tr
              %td
                = sake.name
              %td
                = sake.price
              %td
                = sake.prefecture
              %td
                = sake.comment
              %td.text-center.delete_box
                = link_to "削除", sake_path(sake.id), method: :delete, class: "destroy_btn"
    .col-1