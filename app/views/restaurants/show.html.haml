.container-fluid
  .restaurant-info
    .row
      -# = image_tag @restaurants.image.url, if @restaurants.image.present?
      .col-2
      .card-body.col-8
        %h5.card-title
          %a
            = @restaurants.name
          .row
            %p.card-text.col-6
              = @restaurants.addres
            %p.card-text.col-2
              = @restaurants.tel
          %p.text-muted
            = @restaurants.comment
      .col-2
.container-fluid
  .row.bg-warning
    .col
    .font-italic.text-light
      %h4 フードメニュー
    .col
.container-fluid
  .row
    .col-1
    .col
      %table.table.table-striped
        %thead
          %tr
            %th{scope: "col"} 商品名
            %th{scope: "col"} 価格
            %th{scope: "col"} コメント
        %tbody
          %tr
          - @foods.each do |food|
            %tr
              %td
                = food.name
              %td
                = food.price
              %td
                = food.comment
    .col-1
