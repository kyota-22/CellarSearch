.container-fluid.my-5
  .row
    .col-1
    .col
      .card.mb-3{style: "max-width: 1080px;"}
        .d-flex.mw-100
          .row.no-gutters.w-100
            .col-md-3
              - if @restaurant.image.present?
                .bd-placeholder-img.m-3
                  = image_tag @restaurant.image.url, size: "220x180"
            .col-md-8
              .card-body
                %h4.card-title.d-flex.justify-content-between
                  = @restaurant.name
                %p.card-text
                  .row.d-flex
                    .col
                      = @restaurant.addres
                    .col.text-right
                      = @restaurant.station
                %p.card-text
                  = @restaurant.tel
                %p.card-text
                  = @restaurant.comment
- if @foods.present?
  = render "foods/index"
- if @drinks.present?
  = render "drinks/index"
- if @sakes.present?
  = render "sakes/index"
- if @wines.present?
  = render "wines/index"