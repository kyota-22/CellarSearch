.container-fluid
  .row
    .col-1
    .col
      .card.mb-3{style: "max-width: 1080px;"}
        .d-flex.mw-100
          .row.no-gutters.w-50
            - @restaurants.each do |restaurant|
              .col-md-4
                - if restaurant.image.present?
                  .bd-placeholder-img
                    = image_tag restaurant.image.url, size: "180x160"
              .col-md-8
                .card-body
                  %h5.card-title
                    = restaurant.name
                    = link_to "店舗ページへ", restaurant_path(restaurant.id)
                    %p.card-text
                      = restaurant.addres
                    %p.card-text
                      = restaurant.tel
                    %p.card-text
                      = restaurant.comment
    .col-1