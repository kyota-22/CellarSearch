.container-fluid.pt-5.pb-3.main_icon
  .row
    %h1.col.text-center CellarSearch
  .row.mt-3.mb-5
    %p.col.h5.text-center CellarSearchはドリンクメニューから飲食店を探すサービスです。
  .row.d-flex.justify-content-around.mt-5
    %button.btn.btn-success.btn-lg.w-25{type: "button"}
      = link_to "店舗ログイン・新規登録", new_restaurant_session_path, class: "text-white"
.row
  .col-3
  .col-6.text-center.mt-5
    %h1 店舗検索
  .col-3
.container-fluid
  = search_form_for @q, url: search_restaurants_path do |f|
    .row.mb-2.mt-3
      .col-2
      .col
        %h4 ドリンク名
      .col-2
    .row.mb-2
      .col-2
      .col
        = f.search_field :drinks_name_cont, class: 'form-control', placeholder: '例：スーパードライ'
      .col-2
    .row.mt-3
      .col-2
      #accordionExample.accordion.col
        #headingOne
          %button.btn.d-flex.align-items-center{"aria-controls" => "collapseOne", "aria-expanded" => "true", "data-target" => "#collapseOne", "data-toggle" => "collapse", type: "button"}
            %h4 日本酒検索
            %p{class: 'title_btn'}🔽
        #collapseOne.collapse{"aria-labelledby" => "headingOne", "data-parent" => "#accordionExample"}
          .d-flex
            .col.w-50
              銘柄
              = f.search_field :sakes_name_cont, class: 'form-control', placeholder: '例：獺祭'
            .col.w-50
              生産地
              = f.search_field :sakes_prefecture_cont, class: 'form-control', placeholder: '例：山口県'
      .col-2
    .row.mt-3
      .col-2
      #accordionExample.accordion.col
        #headingTwo
          %button.btn.d-flex.align-items-center{"aria-controls" => "collapseTwo", "aria-expanded" => "true", "data-target" => "#collapseTwo", "data-toggle" => "collapse", type: "button"}
            %h4 ワイン検索
            %p{class: 'title_btn'}🔽
        #collapseTwo.collapse{"aria-labelledby" => "headingTwo", "data-parent" => "#accordionExample"}
          .d-flex
            .col.w-50
              名前
              = f.search_field :wines_name_cont, class: 'form-control', placeholder: '例：ロバートモンダヴィ'
            .col.w-50
              生産地
              = f.search_field :wines_area_cont, class: 'form-control', placeholder: '例：アメリカ'
          .d-flex
            .col.w-50
              品種
              = f.search_field :wines_variety_cont, class: 'form-control', placeholder: '例：カベルネ・ソーヴィニヨン'
            .col.w-50
              タイプ
              = f.search_field :wines_color_cont, class: 'form-control', placeholder: '例：赤'
      .col-2
    .row.mt-3
      .col-2
      .col
        %h4 その他条件
    .row.mb-2
      .col-2
      .col
        店名
        = f.search_field :name_cont, class: 'form-control', placeholder: '例：居酒屋◯◯'
      .col-2
    .row.mb-3
      .col-2
      .col-4
        地域
        = f.search_field :addres_cont, class: 'form-control', placeholder: '例：◯◯市'
      .col-4
        最寄駅
        = f.search_field :station_cont, class: 'form-control', placeholder: '例：◯◯駅'
      .col-2
    .row
      .text-right.col.mt-3
        %p ※必要な部分のみ入力してください
        %p ※お探しの商品とその他条件で探すと便利です
      .col-2
    .row.mb-3.d-flex.justify-content-around.mt-3
      .col-6.text-center
        = f.submit '検索', class: 'btn btn-primary search-btn w-25'
