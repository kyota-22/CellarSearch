.container-fluid
  .row.mt-5.text-right
    .col.h5
      = link_to "日本酒リストの編集", new_sake_path, data: {"turbolinks" => false}
    .col-1
    .col.h5
      = link_to "ワインリストの編集", new_wine_path, data: {"turbolinks" => false}
    .col-1
    .col.h5
      %button.btn.btn-success{type: "button"}
        = link_to "店舗ページへ", "/restaurants/#{current_restaurant.id}", class: "text-white"
    .col-1
.container-fluid
  = form_with model: @drink, class: "drink_form", local: true do |f|
    .form-row.mt-5
      .col-1
      .form-group.col-md-3
        %h5 ドリンク名
        = f.text_field :name, class: 'form-control', placeholder: '例：生ビール'
      .form-group.col-md-3
        %h5 価格
        = f.text_field :price, class: 'form-control', placeholder: '例：〇〇〇円'
      .form-group.col-md-4
        %h5 コメント
        = f.text_field :comment, class: 'form-control', placeholder: '例：乾杯に'
      .col-1
    .row.mt-5
      .col.text-center
        = f.submit 'リストを更新する', class: 'btn btn-primary w-25 drink_btn'
.container-fluid.mt-5
.container-fluid
  .row.bg-primary
    .col
    .font-italic.text-light
      %h4 ドリンクメニュー
    .col
.container-fluid.drink_box
  .row
    .col-1
    .col
      %table.table.table-striped
        %thead
          %tr
            %th{scope: "col", class: "name_width"} 商品名
            %th{scope: "col", class: "price_width"} 価格
            %th{scope: "col", class: "comment_width"} コメント
        %tbody{class: "drink_list"}
          - @drinks.each do |drink|
            %tr
              %td
                = drink.name
              %td
                = drink.price
              %td
                = drink.comment
              %td.text-center.delete_box
                = link_to "削除", drink_path(drink.id), method: :delete, class: "delete_btn"
    .col-1

