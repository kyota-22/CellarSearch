.container-fluid
  = form_with model: @restaurant, url: edit_restaurant_registration_path, local: true do |f|
    .row.mt-5
      .col-1
      .form-group.col
        %h5 店名
        = f.text_field :name, class: 'form-control', placeholder: '例：居酒屋〇〇'
      .col-1
    .form-row
      .col-1
      .form-group.col-md-5
        %h5 住所
        = f.text_field :addres, class: 'form-control', placeholder: '都道府県から記入'
      .form-group.col-md-5
        %h5 最寄駅
        = f.text_field :station, class: 'form-control', placeholder: '例：〇〇駅　駅まで記入'
      .col-1
    .form-row
      .col-1
      .form-group.col-md-5
        %h5 メールアドレス
        = f.email_field :email, class: 'form-control', placeholder: 'Email'
      .form-group.col-md-5
        %h5 電話番号
        = f.text_field :tel, class: 'form-control', placeholder: '- は無しで記入'
      .col-1
    .form-row
      .col-1
      .form-group.col-md-4
        %h5 お店画像
        = f.file_field :image, class: 'form-control', placeholder: '画像を挿入'
      .form-group.col-md-6
        %h5 宣伝コメント
        = f.text_field :comment, class: 'form-control', placeholder: '自由にコメント'
      .col-1
    -# .form-row
    -#   .form-group.col-md-6
    -#     %h5 パスワード
    -#     = f.password_field :password, class: 'form-control', placeholder: 'password'
    -#   .form-group.col-md-6
    -#     %h5 パスワード(確認)
    -#     = f.password_field :password_confirmation, class: 'form-control', placeholder: '左記と同じパスワードを記入'
    .row.mt-3
      .col.text-center
        = f.submit '編集内容を反映', class: 'btn btn-primary w-25'
.container-fluid
  .row.mt-5.text-right
    .col.h5
      = link_to "ドリンク変更はこちら", new_drink_path, data: {"turbolinks" => false}
    .col-1
  .row.mt-3.text-right
    .col.h5
      = link_to "フード変更はこちら", new_food_path, data: {"turbolinks" => false}
    .col-1
  .row.mt-3.text-right
    .col.h5
      %button.btn.btn-success{type: "button"}
        = link_to "店舗ページへ", "/restaurants/#{current_restaurant.id}", class: "text-white"
    .col-1