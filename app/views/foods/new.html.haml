.container-fluid
  .row.mt-5.text-right
    .col.h5
      %button.btn.btn-success{type: "button"}
        = link_to "店舗ページへ", "/restaurants/#{current_restaurant.id}", class: "text-white"
    .col-1
.container-fluid
  = form_with model: @food, class: "food_form", local: true do |f|
    .form-row.mt-5
      .col-1
      .form-group.col-md-3
        %h5 フード名
        = f.text_field :name, class: 'form-control', placeholder: '例：枝豆'
      .form-group.col-md-3
        %h5 価格
        = f.text_field :price, class: 'form-control', placeholder: '例：〇〇〇円'
      .form-group.col-md-4
        %h5 コメント
        = f.text_field :comment, class: 'form-control', placeholder: '例：すぐ出る'
      .col-1
    .row.mt-5
      .col.text-center
        = f.submit 'メニューを更新する', class: 'btn btn-primary w-25 food_btn'
.container-fluid.mt-5
= render "index"